<div class="container">
    <div id="party-card" class="card my-2">
        <div class="card-header text-white bg-secondary">
            <span>Your Party</span>
        </div>
        <div class="container p-1">
            <div class="card party-member my-2">
                <div class="card-header text-white bg-info">
                    <span>{{this.userInfo.name}}</span>
                </div>
                <div class="container p-1">
                    <ul class="list-group">
                        <li class="list-group-item"><strong>Class:</strong>&nbsp;{{this.userInfo.class}}</li>
                        <li class="list-group-item"><strong>&nbsp;Race:</strong>&nbsp;{{this.userInfo.race}}</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div id="matches-card" class="card bg-light my-2">
        <div class="card-header text-white bg-secondary">
            <span>Top Five Potential Party Members</span>
        </div>
        <div class="card-body p-2">

            {{#each this.matches}}
            <div class="card match my-2">
                <div class="card-header text-white bg-info">
                    <span>{{this.adventurer.name}}</span><span class="badge badge-light">{{this.matchScore}}</span>
                </div>
                <div class="container p-1">
                    <ul class="list-group">
                        <li class="list-group-item"><strong>Class:</strong>&nbsp;{{this.adventurer.class}}</li>
                        <li class="list-group-item"><strong>Level:</strong>&nbsp;{{this.adventurer.level}}</li>
                        <li class="list-group-item"><strong>Race:</strong>&nbsp;{{this.adventurer.race}}, &nbsp;{{this.adventurer.subRace}}</li>
                        <li class="list-group-item"><strong>Gender:</strong>&nbsp;{{this.adventurer.gender}}</li>
                        <li class="list-group-item"><strong>Hit Points:</strong>&nbsp;{{this.adventurer.hp}}</li>
                        <li class="list-group-item"><strong>Strength:</strong>&nbsp;{{this.adventurer.stats.str}}</li>
                        <li class="list-group-item"><strong>Dexterity:</strong>&nbsp;{{this.adventurer.stats.dex}}</li>
                        <li class="list-group-item"><strong>Constitution:</strong>&nbsp;{{this.adventurer.stats.con}}</li>
                        <li class="list-group-item"><strong>Intelligence:</strong>&nbsp;{{this.adventurer.stats.int}}</li>
                        <li class="list-group-item"><strong>Wisdom:</strong>&nbsp;{{this.adventurer.stats.wis}}</li>
                        <li class="list-group-item"><strong>Charisma:</strong>&nbsp;{{this.adventurer.stats.cha}}</li>
                    </ul>
                </div>
            </div>
            {{/each}}

        </div>
    </div>
</div>